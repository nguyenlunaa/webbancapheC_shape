@model WebCafe.Models.ThanhVien
@{
    ViewBag.Title = "Quản lý tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0"><a href="index.html">Trang chủ</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">Quản lý tài khoản</strong></div>
        </div>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="mdi mdi-check-all mr-2"></i>
        @TempData["Success"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="mdi mdi-check-all mr-2"></i>
        @TempData["Error"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
}
<div class="site-section">
    <div class="container">
        <!--code-->
        <div class="container">
            <div class="row justify-content-around">
                <form class="col-md-6 bg-light p-3 my-3" method="post">
                    <h1 class="text-center text-uppercase h3 py-3">Tài khoản Thành Viên</h1>

                    <div class="form-group">
                        <label for="fullname">Tài Khoản</label>
                        <input type="text" name="TaiKhoan" id="fullname" value="@Model.TaiKhoan" class="form-control" disabled>
                    </div>

                    <div class="form-group">
                        <label for="fullname">Mật Khẩu</label>
                        <input type="password" name="MatKhau" id="fullname" value="*******" class="form-control" disabled>
                    </div>

                    <div class="form-group">
                        <label for="fullname">Họ Và Tên</label>
                        <input type="text" name="HoTen" id="fullname" value="@Model.HoTen" class="form-control" disabled>
                    </div>

                    <div class="form-group">
                        <label for="c_order_notes" class="text-black">Địa Chỉ</label>
                        <textarea name="c_order_notes" id="c_order_notes" cols="30" rows="5" class="form-control" disabled>@Model.DiaChi</textarea>
                    </div>

                    <div class="form-group">
                        <label for="fullname">Email</label>
                        <input type="text" name="Email" id="fullname" value="@Model.Email" class="form-control" disabled>
                    </div>

                    <div class="form-group">
                        <label for="fullname">Điện Thoại</label>
                        <input type="text" name="DienThoai" id="fullname" value="@Model.DienThoai" class="form-control" disabled>
                    </div>

                    <a href="@Url.Action("SuaTaiKhoanTV", "QuanLyTaiKhoan")" class="btn-warning btn btn-block" style="color:black;">Sửa thông tin tài khoản</a>
                </form>
            </div>

        </div>
        <!--code-->
    </div>


<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Mukta:300,400,700">
    <link rel="stylesheet" href="~/Assets/Home/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/Assets/Home/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Assets/Home/css/magnific-popup.css">
    <link rel="stylesheet" href="~/Assets/Home/css/jquery-ui.css">
    <link rel="stylesheet" href="~/Assets/Home/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Assets/Home/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/Assets/Home/css/aos.css">
    <link rel="stylesheet" href="~/Assets/Home/css/style.css">
    <link rel="stylesheet" href="~/Assets/Home/css/blog.css">
    <link rel="stylesheet" href="~/Assets/Home/css/blogdetail.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css" integrity="sha256-2XFplPlrFClt0bIdPgpz8H7ojnk10H69xRqd9+uTShA=" crossorigin="anonymous" />
    <!-- Icons Css -->
    <link href="~/Assets/admin/css/icons.min.css" rel="stylesheet" type="text/css">
    <link href="~/Assets/admin/libs/select2/css/select2.min.css" rel="stylesheet" type="text/css">
</head>
<body>
    <div class="site-wrap">
        <header class="site-navbar" role="banner">
            <div class="site-navbar-top">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-6 col-md-4 order-2 order-md-1 site-search-icon text-left">
                            <form action="/SanPham/Index" class="site-block-top-search">
                                <span class="icon icon-search2"></span>
                                <input type="text" class="form-control border-0" name="search" placeholder="Tìm kiếm">
                                <input type="submit" id="submitbtn" style="display:none;" />
                            </form>
                        </div>
                        <div class="col-12 mb-3 mb-md-0 col-md-4 order-1 order-md-2 text-center">
                            <div class="site-logo">
                                <a href="~/TrangChu/Index" class="js-logo-clone">Trung Nguyen</a>
                            </div>
                        </div>
                        <div class="col-6 col-md-4 order-3 order-md-3 text-right">
                            <div class="site-top-icons">
                                <ul>
                                    <li class="dropdown notification-list">
                                        <a class="nav-link nav-user mr-0" data-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
                                            <span class="icon icon-person">
                                                <i class="mdi mdi-chevron-down"></i>
                                            </span>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right profile-dropdown" style="">
                                            @if (Session["HoTenTV"] != null)
                                            {
                                                <!-- item-->
                                                <div class="dropdown-header noti-title">
                                                    <h6 class="text-overflow m-0">Xin chào, <br><span class="text-black"> @Session["HoTenTV"]</span></h6>
                                                </div><!-- item--><a href="@Url.Action("CaiDat", "QuanLyTaiKhoan")" class="dropdown-item notify-item">
                                                    <i class="mdi mdi-account-outline"></i>
                                                    <span>Tài khoản</span>
                                                </a><!-- item--><a href="@Url.Action("DonHang", "QuanLyTaiKhoan")" class="dropdown-item notify-item">
                                                    <i class="mdi mdi-cart-outline"></i>
                                                    <span>Đơn hàng</span>
                                                </a><div class="dropdown-divider"></div><!-- item--><a href="@Url.Action("Logout", "DangNhap")" class="dropdown-item notify-item">
                                                    <i class="mdi mdi-logout-variant"></i>
                                                    <span>Đăng xuất</span>
                                                </a>
                                            }
                                            else
                                            {
                                                <div class="dropdown-header noti-title">
                                                    <span>Bạn chưa đăng nhập </span>
                                                    <a href="@Url.Action("Index", "DangNhap")" class="btn btn-outline-info">Đăng nhập</a>
                                                </div>
                                                <div class="dropdown-header noti-title">
                                                    <span>Nếu chưa có tài khoản </span>
                                                    <a href="@Url.Action("Index", "DangKy")" class="btn btn-outline-info">Đăng ký</a>
                                                </div>
                                            }
                                        </div>
                                    </li>
                                    <li><a href="#"><span class="icon icon-heart-o"></span></a></li>
                                    <li>
                                        <a href="@Url.Action("Index","GioHang")" class="site-cart">
                                            <span class="icon icon-shopping_cart"></span>
                                            @if (Session["count"] != null && Session["cart"] != null)
                                            {
                                                <span class="count" id="CartCount">@Session["count"]</span>
                                            }
                                        </a>
                                    </li>
                                    <li class="d-inline-block d-md-none ml-md-0"><a href="#" class="site-menu-toggle js-menu-toggle"><span class="icon-menu"></span></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <nav class="site-navigation text-right text-md-center" role="navigation">
                <div class="container">
                    <ul class="site-menu js-clone-nav d-none d-md-block">
                        <li class="has-children active">
                        <li><a href="~/TrangChu/Index">Trang chủ</a></li>
                        <li><a href="~/SanPham/Index">Sản phẩm</a></li>
                        <li><a href="~/About/Index">Về chúng tôi</a></li>
                        <li @*class="has-children"*@>
                            <a href="~/Blog/Index">Blog cà phê</a>
                            @*<ul class="dropdown">
                                <li><a href="#">Menu One</a></li>
                                <li><a href="#">Menu Two</a></li>
                                <li><a href="#">Menu Three</a></li>
                            </ul>*@
                        </li>
                        <li><a href="~/LienHe/Index">Liên hệ</a></li>
                    </ul>
                </div>
            </nav>
        </header>

        @RenderBody()
    </div>
    <footer class="site-footer border-top">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <div class="row">
                        <div class="col-md-12">
                            <h3 class="footer-heading mb-4">Hỗ Trợ Khách Hàng</h3>
                        </div>
                        <div class="col-md-6 col-lg-4">
                            <ul class="list-unstyled">
                                <li><a href="#">Chính Sách Bảo Mật Thông Tin</a></li>
                                <li><a href="#">Chính Sách Vận Chuyển</a></li>
                                <li><a href="#">Chính Sách Bảo Hành</a></li>
                                <li><a href="#">Hướng Dẫn Mua Hàng</a></li>
                                <li><a href="#">Hướng Dẫn Thanh Toán</a></li>
                                <li><a href="#">Các Câu Hỏi Thường Gặp</a></li>
                            </ul>
                        </div>

                        <div class="col-md-6 col-lg-4">
                            <ul class="list-unstyled">
                                <li><a href="#">Về Chúng Tôi</a></li>
                                <li><a href="#">Chính Sách</a></li>
                                <li><a href="#">Liên Hệ</a></li>
                            </ul>
                        </div>
                        <div class="col-md-6 col-lg-4">
                            <ul class="list-unstyled">
                                <li><a href="#">Sản Phẩm Giảm Giá</a></li>
                                <li><a href="#">Bảo Hành Sản Phẩm</a></li>
                                <li><a href="#">Hỗ Trợ Sản Phẩm</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4 mb-lg-0">
                    <h3 class="footer-heading mb-4">Thông Tin Quảng Cáo</h3>
                    <a href="#" class="block-6">
                        <img src="~/Assets/Home/images/caphe1.jpg" alt="Image placeholder" class="img-fluid rounded mb-4">
                        <h3 class="font-weight-light  mb-0">Cà Phê Yêu Thích Của Bạn</h3>
                        <p>Sản Phẩm Được Quảng Bá 15 &mdash; 25, 2019</p>
                    </a>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="block-5 mb-5">
                        <h3 class="footer-heading mb-4">Thông Tin Liên Hệ</h3>
                        <ul class="list-unstyled">
                            <li class="address">235 Hoàng Quốc Việt Bắc Từ Niêm Hà Nội Việt Nam</li>
                            <li class="phone"><a href="tel://23923929210">+094 551 6715</a></li>
                            <li class="email">caphetrungnguyen@gmail.cpm</li>
                        </ul>
                    </div>

                    <div class="block-7">
                        <form action="#" method="post">
                            <label for="email_subscribe" class="footer-heading">Ý Kiến Đánh Giá</label>
                            <div class="form-group">
                                <input type="text" class="form-control py-4" id="email_subscribe" placeholder="Email">
                                <input type="submit" class="btn btn-sm btn-primary" value="Send">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
<script src="~/Assets/Home/js/jquery-3.3.1.min.js"></script>
<script src="~/Assets/Home/js/jquery-ui.js"></script>
<script src="~/Assets/Home/js/popper.min.js"></script>
<script src="~/Assets/Home/js/bootstrap.min.js"></script>
<script src="~/Assets/Home/js/owl.carousel.min.js"></script>
<script src="~/Assets/Home/js/jquery.magnific-popup.min.js"></script>
<script src="~/Assets/Home/js/aos.js"></script>

<script src="~/Assets/Home/js/main.js"></script>
@RenderSection("ClientScript", false)

